@{
    ViewData["Title"] = "Add New Role";
}

<h1>Add New Role</h1>
<hr />
<div class="row">
    <form asp-action="AddRole">
        <div class="col-md-4">
            <div class="form-group">
                <label for="Role" class="control-label">Role</label>
                <input type="text" id="Role" name="Role" required class="form-control" />
                <div class="form-group">
                    <input type="submit" value="Add Role" class="btn btn-primary mt-2" />
                </div>
                <div class="form-group mt-2">
                    <span class="text-danger">@TempData["RoleExistsError"]</span>
                    <span class="text-danger">@TempData["InvalidRole"]</span>
                </div>
            </div>
        </div>
    </form>
</div>